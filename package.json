{
	"name": "reed-board-track",
	"displayName": "Reed Board Tracker",
	"version": "0.0.1",
	"description": "Track your board points over time.",
	"author": "Tristan F. <leodog896@gmail.com>",
	"scripts": {
		"dev": "plasmo dev",
		"dev:chrome": "plasmo dev --target=chrome-mv3",
		"dev:firefox": "plasmo dev --target=firefox-mv3",
		"build": "plasmo build",
		"build:chrome": "plasmo build --target=chrome-mv3",
		"build:firefox": "plasmo build --target=firefox-mv3",
		"package": "plasmo package",
		"format": "prettier --write ."
	},
	"dependencies": {
		"@fontsource-variable/dm-sans": "^5.0.7",
		"@plasmohq/messaging": "^0.6.2",
		"@plasmohq/storage": "^1.12.0",
		"chart.js": "^4.4.4",
		"chartjs-adapter-dayjs-4": "^1.0.4",
		"dayjs": "^1.11.13",
		"deep-equal": "^2.2.3",
		"downloadjs": "^1.4.7",
		"plasmo": "^0.89.1",
		"svelte": "^4.2.19",
		"svelte-preprocess": "^6.0.2",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "^4.1.1",
		"@parcel/transformer-inline-string": "2.9.3",
		"@parcel/transformer-sass": "^2.12.0",
		"@types/chart.js": "^2.9.41",
		"@types/chrome": "^0.0.258",
		"@types/deep-equal": "^1.0.4",
		"@types/downloadjs": "^1.4.6",
		"@types/node": "^20.11.5",
		"prettier": "^3.2.4",
		"prettier-plugin-svelte": "^3.2.6",
		"typescript": "^5.3.3"
	},
	"manifest": {
		"host_permissions": [
			"https://iris.reed.edu/board_commuter/*"
		],
		"permissions": [
			"declarativeNetRequest"
		],
		"web_accessible_resources": [
			{
				"matches": [
					"<all_urls>"
				],
				"resources": [
					"tabs/index.html"
				]
			}
		],
		"content_security_policy": {
			"extension_pages": "default-src 'self'"
		},
		"browser_specific_settings": {
			"gecko": {
				"id": "reed-board-track@leodog896.com"
			}
		}
	}
}
